    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMyTitleBar"
    tools:context="org.pnv.pnvforum.activity.Login">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vflp_login" >

        <FrameLayout
            android:id="@+id/frame_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/frame_register"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ViewFlipper>
</RelativeLayout>
