<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder_style_text"
        android:layout_margin="10dp"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorMyTitleBar"
            android:textStyle="bold"
            android:text="Đăng ký"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:paddingTop="10dp">

        </TextView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/boder_style_text">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_user_name"
                android:layout_weight="1"
                android:layout_marginLeft="2dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:id="@+id/edt_register_user_name"
                android:hint="Tên tài khoản"
                android:paddingLeft="10dp"
                android:layout_weight="10"
                android:background="@drawable/boder_style_text" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/boder_style_text">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_email"
                android:layout_weight="1"
                android:layout_marginLeft="2dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:id="@+id/edt_register_email"
                android:hint="Địa chỉ email"
                android:paddingLeft="10dp"
                android:layout_weight="10"
                android:background="@drawable/boder_style_text" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/boder_style_text">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_lock_password"
                android:layout_weight="1"
                android:layout_marginLeft="2dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:id="@+id/edt_register_password"
                android:hint="Mật khẩu"
                android:layout_weight="10"
                android:background="@drawable/boder_style_text"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/boder_style_text">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_lock_password"
                android:layout_weight="1"
                android:layout_marginLeft="2dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:id="@+id/edt_confirm_pasword"
                android:hint="Xác nhận mật khẩu"
                android:layout_weight="10"
                android:background="@drawable/boder_style_text"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/rabtn_agree"
                android:checked="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Đồng ý với điều khoản sử  dụng"
                android:id="@+id/tv_register_condition"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Đăng ký"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:background="@drawable/border_style_btn_blue"
            android:textColor="@color/white"
            android:id="@+id/btn_register" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn đã có tài khoản?"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập tại đây."
                android:id="@+id/tv_register_login"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>